        --bs-text-opacity: 1;
        color: rgba(13,110,253, var(--bs-text-opacity)) !important;
      }
      .col{
        flex: 1 0;
      }
      .row > * {
        --bs-gutter-x: 1.5rem;
        --bs-gutter-y: 0;
        flex-shrink: 0;
        width: 100%;
        max-width: 100%;
        padding-right: calc(var(--bs-gutter-x)* 0.5);
        padding-left: calc(var(--bs-gutter-x)* 0.5);
